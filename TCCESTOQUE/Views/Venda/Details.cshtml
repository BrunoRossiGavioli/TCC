@model TCCESTOQUE.Models.VendaModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout-Interno.cshtml";
}

<h1>Details</h1>

<div>
    <h4>VendaModel</h4>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataVenda)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vendedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vendedor.Nome)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                Produto    
            </th>
            <th>
                Quantidade
            </th>
            <th>
                Data da venda
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int numero = 1;
            foreach (var item in Model.Itens)
            {
                if (item.VendaId == Model.VendaId)
                {
                    <tr>
                        <td>
                            @numero
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Produto.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrecoProduto)
                        </td>
                        <td>
                            @( (item.PrecoProduto * item.Quantidade).ToString("###,##0.00") )
                        </td>
            
                    </tr>
                    numero += 1;
                }
            }
        }
        <tr>
            <td colspan="3">Total</td>
            <td>
                @{
                    decimal valor = 0m;
                    foreach (var item in Model.Itens)
                    {
                        if (Model.VendaId == item.VendaId)
                            valor += item.Produto.ValorUnitario * item.Quantidade;
                    }
                }
                @valor;
            </td>
            
        </tr>
    </tbody>
</table>
<div>
    <a asp-action="Index">
        Voltar
    </a>
</div>
