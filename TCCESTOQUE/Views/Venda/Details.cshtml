@model TCCESTOQUE.Models.VendaModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>VendaModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataVenda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vendedor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vendedor.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
    </dl>
</div>
<div class="row py-3 px-3">
    <!--<a asp-controller="VendaItens" asp-action="Create"><input type="button" class="btn btn-success" value="Adicionar produto"></a>-->
    <a href="/VendaItens/Create/@Model.VendaId"><input type="button" class="btn btn-success" value="Adicionar produto"></a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                Produto    
            </th>
            <th>
                Quantidade
            </th>
            <th>
                Fornecedor
            </th>
            <th>
                Data da venda
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Itens)
        {
            if (item.VendaId == Model.VendaId) 
            { 
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VendaItensId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto.Fornecedor.NomeFantasia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Venda.DataVenda)
                    </td>
                    <td>
                        <a asp-controller="VendaItens" asp-action="Edit" asp-route-id="@item.VendaItensId">Edit</a> |
                        <a asp-controller="VendaItens" asp-action="Details" asp-route-id="@item.VendaItensId">Details</a> |
                        <a asp-controller="VendaItens" asp-action="Delete" asp-route-id="@item.VendaItensId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>
