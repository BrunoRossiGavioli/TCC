    <hr />
    <dl class="row Detalhes">
        <dt class = "col-sm-2">
            Valor
        </dt>
        <dd class = "col-sm-10">
            @*criar metodo que mostre o valor*@
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataVenda)
