@model TCCESTOQUE.Models.CarrinhoModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout-Interno.cshtml";
} 

<h1>Carrinho</h1> 

<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <dl class="row Detalhes">
        <dt class="col-sm-2 DetalhesHeader">
            Valor
        </dt>
        <dd class="col-sm-10 ">
            @{
                decimal valor = 0m;
                foreach (var item in Model.Itens)
                {
                    if (Model.CarrinhoId == item.CarrinhoId)
                        valor += item.Produto.ValorUnitario * item.Quantidade;
                }
            }
            @valor
        </dd>
        <dt class="col-sm-2 DetalhesHeader">
            @Html.DisplayNameFor(model => model.Vendedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vendedor.Nome)
        </dd>
    </dl>
</div>
<div class="row py-3 px-3">
    <a asp-controller="VendaItens" asp-action="ItemCarrinho" asp-route-id="@ViewBag.CarrinhoId">
        <input type="button" class="btn btn-success" value="Adicionar produto">
    </a>
    <form asp-action="Details">
        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId" ></select>
        <input type="hidden" asp-for="CarrinhoId" value="@ViewBag.CarrinhoId"/>
        <input type="hidden" asp-for="VendedorId" value="@ViewBag.usuarioId" />
        <input type="submit" class="btn btn-primary" value="Finalizar" />
    </form>
    
</div>
<table class="tabela">
    <thead>
        <tr>
            <th class="mb-visivel">
                Código
            </th>
            <th class="mb-visivel">
                Produto
            </th>
            <th class="mb-visivel">
                Quantidade
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Itens != null)
        {
            var numero = 1;
            @foreach (var item in Model.Itens)
            {
                if (item.CarrinhoId == Model.CarrinhoId)
                {
                    <tr>
                        <td class="mb-visivel">
                            @numero
                        </td>
                        <td class="mb-visivel">
                            @Html.DisplayFor(modelItem => item.Produto.Nome)
                        </td>
                        <td class="mb-visivel">
                            @Html.DisplayFor(modelItem => item.Quantidade)
                        </td>
                        <td class="opcoes">
                            <a title="Editar" asp-controller="VendaItens" asp-action="EditItemCarrinho" class="Links" asp-route-id="@item.VendaItensId">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                </svg>
                            </a> 
                            <span></span>
                            <a title="Deletar" asp-controller="VendaItens" asp-action="Delete" class="Links" asp-route-id="@item.VendaItensId">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                </svg>
                            </a>
                        </td>
                    </tr>
                }
                numero += 1;
            }
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
