@model TCCESTOQUE.Models.VendaItensModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>VendaItensModel</h4>
    <hr />
    <dl class="row Lista">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.VendaId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
    </dl>
    @if(Model.VendaId != null) 
    { 
        <form asp-action="Delete">
            <input type="hidden" asp-for="VendaItensId" />
            <input type="hidden" asp-for="VendaId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-controller="Venda" asp-action="Details" asp-route-id="@Model.VendaId"><svg xmlns="http://www.w3.org/2000/svg" width="50" height="25" fill="currentColor" class="bi bi-arrow-left-square-fill" viewBox="0 0 16 16">
