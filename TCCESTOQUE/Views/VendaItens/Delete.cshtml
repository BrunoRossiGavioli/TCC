        </form>
    }
    @if(Model.CarrinhoId != null) 
    { 
        <form asp-action="DeleteItemCarrinho">
            <input type="hidden" asp-for="VendaItensId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-controller="Carrinho" asp-action="Details" asp-route-id="@Model.VendedorId"><svg xmlns="http://www.w3.org/2000/svg" width="50" height="25" fill="currentColor" class="bi bi-arrow-left-square-fill" viewBox="0 0 16 16">
