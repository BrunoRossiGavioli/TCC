@model TCCESTOQUE.Models.VendaItensModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout-Interno.cshtml";
}
<div id="moldura">
    <form class="cadastro" asp-action="ItemCarrinho">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="VendedorId"  value="@ViewBag.usuarioId" />
        <input type="hidden" asp-for="CarrinhoId"  value="@ViewBag.CarrinhoId" />
        <h1>
            Adicionar produto ao carrinho
        </h1>
        <div class="campo">
            <label asp-for="ProdutoId" ></label>
            <select asp-for="ProdutoId"  asp-items="ViewBag.ProdutoId"></select>
        </div>
        <div class="campo">
            <label asp-for="Quantidade" ></label>
            <input asp-for="Quantidade"  />
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>
        <div class="just-right">
            <a class="btn-voltar" asp-controller="Carrinho" asp-action="Details" asp-route-id="@ViewBag.usuarioId">
                Voltar ao carrinho
            </a>
            <input type="submit" value="Adicionar" class="btn-cadastrar" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
