@model IEnumerable<TCCESTOQUE.Models.FornecedorModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="CadastroFull">Create New</a>
</p>
<table class="table">
    <thead class="CabecalhoListagem">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeFantasia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
            </th>
                                  
        </tr>
    </thead>
    <tbody class="Lista">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeFantasia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cnpj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    <a asp-action="EditFull" class="LinksListagem" asp-route-id="@item.FornecedorId">Edit</a> |
                    <a asp-action="Details" class="LinksListagem" asp-route-id="@item.FornecedorId">Details</a>|
                    <a asp-action="Delete" class="LinksListagem" asp-route-id="@item.FornecedorId">Delete</a>
                </td>                
            </tr>
        }
    </tbody>
</table>
