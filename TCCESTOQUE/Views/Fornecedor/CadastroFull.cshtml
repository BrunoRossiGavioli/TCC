@model TCCESTOQUE.ViewModel.FornecedorEnderecoViewModel;

@{
    ViewData["Title"] = "CadastroFull";
    Layout = "~/Views/Shared/_Layout-Interno.cshtml";
}
<body>
    <div id="moldura">
        <form class="cadastro" asp-action="CadastroFull">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="VendedorId" value="@ViewBag.usuarioId" hidden />
            <h1>
                Cadastrar fornecedor
            </h1>
            <div class="campo">
                <label asp-for="RazaoSocial">Razão Social</label>
                <input asp-for="RazaoSocial" />
                <span asp-validation-for="RazaoSocial" class="text-danger"></span>
            </div>
            <div class="campo">
                <label asp-for="NomeFantasia"></label>
                <input asp-for="NomeFantasia" />
                <span asp-validation-for="NomeFantasia" class="text-danger"></span>
            </div>
            <div class="campo">
                <label asp-for="Cnpj"></label>
                <input asp-for="Cnpj" data-mask="00.000.000/0000-00" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="campo">
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="campo">
                <label asp-for="Telefone"></label>
                <input asp-for="Telefone" data-mask="(00)00000-0000" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="campo">
                <label asp-for="Cep"></label>
                <input asp-for="Cep" data-mask="00000-000" id="cep" />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>
            <div class="campo">
                <label asp-for="Localidade">Cidade</label>
                <input asp-for="Localidade" id="localidade" />
                <span asp-validation-for="Localidade" class="text-danger"></span>
            </div>
            <div class="campo">
                <label asp-for="Bairro"></label>
                <input asp-for="Bairro" id="bairro" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="campo2">
                <div>
                    <label asp-for="Logradouro">Rua</label>
                    <input asp-for="Logradouro" id="logradouro" />
                    <span asp-validation-for="Logradouro" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Complemento"></label>
                    <input asp-for="Complemento" id="complemento" />
                    <span asp-validation-for="Complemento" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Numero"></label>
                    <input type="text" asp-for="Numero" data-mask="000000" id="numero" />
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>
            </div>
            <div class="campo">
                <label asp-for="Uf">Unidade Federal</label>
                <select asp-for="Uf" id="uf">
                    <option selected value="0">Selecionar</option>
                    <option value="AC">Acre</option>
                    <option value="AL">Alagoas</option>
                    <option value="AP">Amapá</option>
                    <option value="AM">Amazonas</option>
                    <option value="BA">Bahia</option>
                    <option value="CE">Ceará</option>
                    <option value="DF">Distrito Federal</option>
                    <option value="ES">Espírito Santo</option>
                    <option value="GO">Goiás</option>
                    <option value="MA">Maranhão</option>
                    <option value="MT">Mato Grosso</option>
                    <option value="MS">Mato Grosso do Sul</option>
                    <option value="MG">Minas Gerais</option>
                    <option value="PA">Pará</option>
                    <option value="PB">Paraíba</option>
                    <option value="PR">Paraná</option>
                    <option value="PE">Pernambuco</option>
                    <option value="PI">Piauí</option>
                    <option value="RJ">Rio de Janeiro</option>
                    <option value="RN">Rio Grande do Norte</option>
                    <option value="RS">Rio Grande do Sul</option>
                    <option value="RO">Rondônia</option>
                    <option value="RR">Roraima</option>
                    <option value="SC">Santa Catarina</option>
                    <option value="SP">São Paulo</option>
                    <option value="SE">Sergipe</option>
                    <option value="TO">Tocantins</option>
                </select>
                <span asp-validation-for="Uf" class="text-danger"></span>
            </div>
            <div class="just-right">
                <a asp-action="Index" class="btn-voltar"><svg xmlns="http://www.w3.org/2000/svg" width="50" height="25" fill="currentColor" class="bi bi-arrow-left-square-fill" viewBox="0 0 16 16">
  <path d="M16 14a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12zm-4.5-6.5H5.707l2.147-2.146a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708-.708L5.707 8.5H11.5a.5.5 0 0 0 0-1z"/>
</svg></a>
                <input type="submit" value="Cadastrar" class="btn-cadastrar" />
            </div>
        </form>
    </div>
</body>
<script src="~/js/CepScript.js" type="text/javascript"></script>
