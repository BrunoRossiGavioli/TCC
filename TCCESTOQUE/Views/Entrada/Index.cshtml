@model IEnumerable<TCCESTOQUE.Models.EntradaModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuantidadeProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendedor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    var estiloTr = "bg-light";
    var estiloLink = "";
    @if (item.Cancelada) {estiloTr = "bg-danger text-white"; estiloLink = "text-white"; }
        <tr class="@estiloTr">
            <td>
                @Html.DisplayFor(modelItem => item.QuantidadeProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor.NomeFantasia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendedor.Nome)
            </td>
            <td>
                <a class="@estiloLink" asp-action="Details" asp-route-id="@item.EntradaId">Details</a>
                @if (!item.Cancelada) { 
                    <span> | </span> <a asp-action="Delete" asp-route-id="@item.EntradaId">Delete</a>
                }
                     
            </td>
        </tr>
}
    </tbody>
</table>
