@model TCCESTOQUE.Models.EntradaModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout-Interno.cshtml";
}

<h1>Cancelar</h1>

<h3>Tem certeza que deseja cancelar essa entrada de estoque?</h3>
<div>
    <h4>Estoque</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Unidade de medida
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnidadeMedida)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadeProduto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeProduto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoProduto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecoProduto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustoProduto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustoProduto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor.NomeFantasia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vendedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vendedor.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EntradaId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">
            Cancelar
        </a>
    </form>
</div>
