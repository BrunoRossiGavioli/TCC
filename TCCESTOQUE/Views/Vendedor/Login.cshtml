@model TCCESTOQUE.Models.VendedorModel

@{
    ViewData["Title"] = "Login";
}


<div class="container-sm">
    <div class="d-flex justify-content-center">
        <div class="card-login">
            <div class="d-flex justify-content-center">
                <div class="txt-login">
                    <h3>Login</h3>
                </div>
            </div>
            <hr>
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="VendedorId" />
                <div class="form-group">
                    <div class="inputs-login">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="inputs-login">
                        <input asp-for="Senha" class="form-control" placeholder="Senha" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                </div>
                <div class="forgot-password">
                    <a href="#">Esqueceu a senha</a>
                </div>
                <div class="d-flex justify-content-around">
                    <button class="button"><span>Entrar</span> </button>
                </div>
                <div class="register-account">
                    Ainda não possui uma Conta? <a href="#"> Cadastrar</a>
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
