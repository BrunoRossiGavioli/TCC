@model TCCESTOQUE.Models.VendedorModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>Vendedor</h4>
<hr />
<div asp-validation-summary="ModelOnly" class="row text-danger"></div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <input type="hidden" asp-for="VendedorId" />
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" placeholder="Senha" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div>
                <a asp-action="EsqueciSenha">Esqueci a senha</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-danger">
                    Voltar ao menu
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
