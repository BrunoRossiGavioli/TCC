@model TCCESTOQUE.Models.EmailClienteModel
@{
    ViewData["Title"] = "EsqueciSenha";
    Layout = "~/Views/Shared/_Layout-Externo.cshtml";
}

<div id="moldura">
    <form class="cadastro" asp-action="EsqueciSenha">
        <h1>Esqueci a senha</h1>
        <div class="campo">
            <label> Informe o e-mail </label>
            <input asp-for="Email" />
            <span class="text-success">@ViewBag.sucesso</span>
            <span class="text-danger">@ViewBag.erro</span>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="just-right">
            <input class="btn-cadastrar" type="submit" value="Enviar" />
            <a class="btn-voltar" asp-action="Login">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
