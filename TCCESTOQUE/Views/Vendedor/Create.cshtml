@model TCCESTOQUE.Models.VendedorModel

@{
    ViewData["Title"] = "Create";
}

<div class="container-sm">
        <div class="d-flex justify-content-center">
            <div class="card-register">
                <div class="d-flex justify-content-center">
                    <div class="txt-register">
                        <h3>Cadastro</h3>
                    </div>

                </div>
                <hr>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Nome" placeholder="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Cpf" placeholder="Cpf" class="form-control" />
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="date" asp-for="DataNascimento" class="form-control" />
                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Email" placeholder="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Telefone" placeholder="Telefone" class="form-control" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Senha" placeholder="Senha" class="form-control" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>

                    <div class="form-check">
                        <div class="txt-checkbox">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Concordo com as <a href="#">Politicas de Privacidade</a>
                            </label>
                        </div>
                    </div>

                    <div class="d-flex justify-content-around">
                        <button class="button"><span>Cadastrar</span> </button>
                    </div>

                    <div class="no-account">
                        Já possui uma conta? <a href="#">Login</a>
                    </div>


                </form>
            </div>
        </div>
</div>










    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
