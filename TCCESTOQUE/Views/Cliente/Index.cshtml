@model IEnumerable<TCCESTOQUE.Models.ClienteModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.usuarioId">Create New</a>
</p>
<table class="table">
    <thead class="CabecalhoListagem">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Endereço
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="Lista">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco.Logradouro) @Html.DisplayFor(n => item.Endereco.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                <a asp-action="Edit" class="text-info LinksListagem" asp-route-id="@item.ClienteId" asp-route-vendedorId="@ViewBag.usuarioId">Edit</a> |
                <a asp-action="Details" class="text-success LinksListagem" asp-route-id="@item.ClienteId">Details</a> |
                <a asp-action="Delete" class="text-danger LinksListagem" asp-route-id="@item.ClienteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
