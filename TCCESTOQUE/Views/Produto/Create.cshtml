@model TCCESTOQUE.Models.ProdutoModel
@using TCCESTOQUE.Models.Enum
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout-Interno.cshtml";
}
<div id="moldura">
    <form class="cadastro" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="VendedorId" value="@ViewBag.usuarioId" />
        <h1>
            Adicionar produto
        </h1>
        <div class="campo">
            <label asp-for="Nome">Nome*</label>
            <input asp-for="Nome" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="campo">
            <label asp-for="Descricao">Descrição</label>
            <input asp-for="Descricao" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="campo">
            <label asp-for="Custo">Custo*</label>
            <input asp-for="Custo" />
            <span asp-validation-for="Custo" class="text-danger"></span>
        </div>
        <div class="campo">
            <label asp-for="ValorUnitario">Valor unitario*</label>
            <input asp-for="ValorUnitario" />
            <span asp-validation-for="ValorUnitario" class="text-danger"></span>
        </div>
        <div class="campo">
            <label asp-for="Quantidade">Quantidade*</label>
            <input asp-for="Quantidade" />
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>
        <div class="campo">
            <label asp-for="UnidadeMedida">Unidade de medida*</label>
            <select asp-for="UnidadeMedida" asp-items="@ViewBag.UnidadeMedida"></select>
            <span asp-validation-for="UnidadeMedida" class="text-danger"></span>
        </div>
        <div class="just-right">
            <a asp-action="Index" alt="Voltar" class="btn-voltar"><svg xmlns="http://www.w3.org/2000/svg" width="50"
                    height="25" fill="currentColor" class="bi bi-arrow-left-square-fill" viewBox="0 0 16 16">
                    <path
                        d="M16 14a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12zm-4.5-6.5H5.707l2.147-2.146a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708-.708L5.707 8.5H11.5a.5.5 0 0 0 0-1z" />
                </svg></a>
            <input type="submit" value="Adicionar" class="btn-cadastrar" />
        </div>
    </form>
</div>
@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

<script>
    $.validator.methods.number = function (value, element) {
        return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:\.\d{3})+)?(?:,\d+)?$/.test(value);
    }
</script>
}
